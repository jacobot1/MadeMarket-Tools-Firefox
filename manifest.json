{
  "manifest_version": 2,
  "name": "MadeMarket Tools",
  "version": "1.1",
  "description": "Inject tools into MadeMarket pages and add Axial search context menu.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://pitchbook.com/profiles/investor/*",
    "*://*.pitchbook.com/profiles/investor/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mademarket.co/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
